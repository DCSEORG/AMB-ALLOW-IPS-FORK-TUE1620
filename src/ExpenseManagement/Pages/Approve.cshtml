@page
@model ExpenseManagement.Pages.ApproveModel
@{
    ViewData["Title"] = "Approve Expenses";
}

@if (Model.ErrorInfo != null)
{
    <div class="error-banner">
        <div class="error-content">
            <strong>‚ö†Ô∏è @Model.ErrorInfo.Message</strong>
            @if (!string.IsNullOrEmpty(Model.ErrorInfo.DetailedMessage))
            {
                <p class="error-detail">@Model.ErrorInfo.DetailedMessage</p>
            }
        </div>
    </div>
}

@if (Model.SuccessMessage != null)
{
    <div class="success-banner">
        <strong>‚úÖ @Model.SuccessMessage</strong>
    </div>
}

@if (Model.UseDummyData)
{
    <div class="info-banner">
        <strong>‚ÑπÔ∏è Demo Mode:</strong> Displaying sample data. Database connection unavailable.
    </div>
}

<div class="container">
    <header class="header">
        <h1>üíº Expense Management System</h1>
        <p class="subtitle">Track, submit, and manage your expenses</p>
    </header>

    <nav class="nav-tabs">
        <a href="/Index" class="nav-tab">üìã My Expenses</a>
        <a href="/AddExpense" class="nav-tab">‚ûï Add Expense</a>
        <a href="/Approve" class="nav-tab active">‚úÖ Approve Expenses</a>
        <a href="/Chat" class="nav-tab">üí¨ AI Assistant</a>
    </nav>

    <div class="content-card">
        <div class="card-header">
            <h2>Pending Approval</h2>
            <p class="card-subtitle">Review and approve submitted expenses</p>
        </div>

        <div class="filters">
            <form method="get" class="filter-form">
                <input type="text" name="search" value="@Model.SearchText" placeholder="Filter..." class="filter-input" />
                <button type="submit" class="btn btn-primary">Filter</button>
            </form>
        </div>

        <table class="expense-table">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Category</th>
                    <th>Amount</th>
                    <th>Submitted By</th>
                    <th>Description</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var expense in Model.PendingExpenses)
                {
                    <tr>
                        <td>@expense.ExpenseDate.ToString("dd/MM/yyyy")</td>
                        <td><span class="category-badge">@expense.CategoryName</span></td>
                        <td class="amount">@expense.FormattedAmount</td>
                        <td>@expense.UserName</td>
                        <td>@expense.Description</td>
                        <td class="action-buttons">
                            <form method="post" asp-page-handler="Approve" style="display:inline;">
                                <input type="hidden" name="expenseId" value="@expense.ExpenseId" />
                                <button type="submit" class="btn btn-small btn-success">Approve</button>
                            </form>
                            <form method="post" asp-page-handler="Reject" style="display:inline;">
                                <input type="hidden" name="expenseId" value="@expense.ExpenseId" />
                                <button type="submit" class="btn btn-small btn-danger">Reject</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        @if (!Model.PendingExpenses.Any())
        {
            <div class="empty-state">
                <p>üéâ No expenses pending approval!</p>
            </div>
        }
    </div>
</div>
