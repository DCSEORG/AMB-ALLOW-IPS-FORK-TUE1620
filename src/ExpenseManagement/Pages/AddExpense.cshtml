@page
@model ExpenseManagement.Pages.AddExpenseModel
@{
    ViewData["Title"] = "Add Expense";
}

@if (Model.ErrorInfo != null)
{
    <div class="error-banner">
        <div class="error-content">
            <strong>‚ö†Ô∏è @Model.ErrorInfo.Message</strong>
            @if (!string.IsNullOrEmpty(Model.ErrorInfo.DetailedMessage))
            {
                <p class="error-detail">@Model.ErrorInfo.DetailedMessage</p>
            }
        </div>
    </div>
}

@if (Model.SuccessMessage != null)
{
    <div class="success-banner">
        <strong>‚úÖ @Model.SuccessMessage</strong>
    </div>
}

<div class="container">
    <header class="header">
        <h1>üíº Expense Management System</h1>
        <p class="subtitle">Track, submit, and manage your expenses</p>
    </header>

    <nav class="nav-tabs">
        <a href="/Index" class="nav-tab">üìã My Expenses</a>
        <a href="/AddExpense" class="nav-tab active">‚ûï Add Expense</a>
        <a href="/Approve" class="nav-tab">‚úÖ Approve Expenses</a>
        <a href="/Chat" class="nav-tab">üí¨ AI Assistant</a>
    </nav>

    <div class="content-card">
        <div class="card-header">
            <h2>Add New Expense</h2>
        </div>

        <form method="post" class="expense-form">
            <div class="form-group">
                <label for="Amount">Amount (¬£)</label>
                <input type="number" step="0.01" min="0" id="Amount" name="Amount" 
                       value="@Model.Amount" required class="form-control" placeholder="0.00" />
            </div>

            <div class="form-group">
                <label for="ExpenseDate">Date</label>
                <input type="date" id="ExpenseDate" name="ExpenseDate" 
                       value="@Model.ExpenseDate?.ToString("yyyy-MM-dd")" required class="form-control" />
            </div>

            <div class="form-group">
                <label for="CategoryId">Category</label>
                <select id="CategoryId" name="CategoryId" required class="form-control">
                    <option value="">Select Category...</option>
                    @foreach (var cat in Model.Categories)
                    {
                        <option value="@cat.CategoryId" selected="@(Model.CategoryId == cat.CategoryId)">@cat.CategoryName</option>
                    }
                </select>
            </div>

            <div class="form-group">
                <label for="Description">Description</label>
                <textarea id="Description" name="Description" rows="4" class="form-control" 
                          placeholder="Enter expense details...">@Model.Description</textarea>
            </div>

            <div class="form-actions">
                <button type="submit" class="btn btn-primary btn-large">Submit Expense</button>
                <a href="/Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>
